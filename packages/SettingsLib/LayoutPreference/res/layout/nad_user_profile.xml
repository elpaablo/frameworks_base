<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:androidprv="http://schemas.android.com/apk/prv/res/android"
        android:gravity="center|bottom"
        android:id="@+id/entity_header"
        android:background="@drawable/nad_bg_gaydient"
        android:backgroundTint="?androidprv:attr/colorSurfaceHeader"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/entity_header_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/nad_info_bg"
        android:gravity="start|center"
        android:orientation="horizontal">

        <ImageView
            android:background="@drawable/nad_ava_bg"
            android:backgroundTint="@android:color/system_accent1_600"
            android:padding="2dp"
            android:id="@+id/entity_header_icon"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:antialias="true"
            android:gravity="start|center"
            android:scaleType="fitCenter" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="start|center"
            android:orientation="vertical"
            android:layout_marginTop="4dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <TextView
                android:id="@+id/entity_header_title"
                style="@style/TextAppearance.EntityHeaderTitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:layout_weight="0.5"
                android:textDirection="locale" />

            <TextView
                style="@style/TextAppearance.EntityHeaderSummary"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:layout_weight="0.5"
                android:text="We are the Nusantara Project Fans" />

        </LinearLayout>

    </LinearLayout>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="20.0dp"
            android:layout_marginBottom="-20dp"
            android:background="@drawable/nad_round_top"
            android:rotation="180.0"
            android:gravity="bottom"
            android:backgroundTint="?android:attr/colorPrimary"/>

</LinearLayout> 
